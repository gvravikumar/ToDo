<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todosapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.todosapp.MainActivity"
            android:label="Categories">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.todosapp.ItemsActivity"
            android:parentActivityName="com.android.todosapp.MainActivity" />
        <activity
            android:name="com.android.todosapp.AddItemActivity"
            android:parentActivityName="com.android.todosapp.ItemsActivity" />
        <activity android:name="com.android.todosapp.EditItemsActivity"
            android:parentActivityName="com.android.todosapp.ItemsActivity"></activity>
    </application>

</manifest>